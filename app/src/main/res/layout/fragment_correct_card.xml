<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/x_small_margin"
    tools:context="com.github.androidpirate.flipit.fragment.CorrectCardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_card_view"
        style="@style/CardStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/small_padding">

            <ImageView
                android:id="@+id/iv_check_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_check"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_check_icon"
                style="@style/CardTextViewStyle"
                android:text="@string/correct_card_text"
                android:textColor="@color/colorGreen"
                android:gravity="center_horizontal"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>