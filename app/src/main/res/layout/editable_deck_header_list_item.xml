<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/regular_margin">

    <TextView
        android:id="@+id/tv_title_tag"
        style="@style/DeckHeaderTitleTextViewStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/title_tag"
        android:textColor="@android:color/black"
        tools:text="Deck Title: "/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_tag"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:textSize="@dimen/small_text_size"
        android:hint="@string/edit_text_hint"
        android:focusableInTouchMode="true"
        android:inputType="text|textMultiLine"/>

    <TextView
        android:id="@+id/tv_category_tag"
        style="@style/DeckHeaderTitleTextViewStyle"
        android:layout_below="@+id/et_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/category_tag"
        android:textColor="@android:color/black"
        tools:text="Category: "/>

    <EditText
        android:id="@+id/et_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_category_tag"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/small_text_size"
        android:hint="@string/edit_text_hint"
        android:inputType="text|textMultiLine"/>

    <ImageButton
        android:id="@+id/bt_expand_description"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="visible"
        android:src="@drawable/ic_add_card"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/et_category"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"/>

    <TextView
        android:id="@+id/tv_description_tag"
        style="@style/DeckHeaderTitleTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_category"
        android:layout_toRightOf="@id/bt_expand_description"
        android:layout_toEndOf="@id/bt_expand_description"
        android:layout_marginLeft="@dimen/regular_margin"
        android:layout_marginStart="@dimen/regular_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/description_tag"
        android:textColor="@android:color/black"
        tools:text="Description"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tv_description_tag"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/small_text_size"
        android:hint="@string/edit_text_hint"
        android:inputType="text|textMultiLine"/>

</RelativeLayout>