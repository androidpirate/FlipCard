<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    tools:context="com.github.androidpirate.flipcard.CorrectCardFragment">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardTextViewStyle"
        android:layout_gravity="center"
        android:text="! Congratulations !"
        android:textColor="@color/colorGreen"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_score_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardTextViewStyle"
        android:text="Score: "
        android:textSize="26sp"
        android:layout_margin="16dp"
        android:layout_below="@id/tv_message"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardTextViewStyle"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@id/tv_score_tag"
        tools:text="9"/>

    <TextView
        android:id="@+id/tv_restart_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardTextViewStyle"
        android:text="Restart ?"
        android:layout_marginTop="48dp"
        android:layout_below="@id/tv_score"/>

    <ImageButton
        android:id="@+id/bt_restart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_restart_tag"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_restart"
        android:background="@android:color/transparent"
        android:layout_margin="16dp"/>

</RelativeLayout>