<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    style="@style/CardStyle"
    app:cardBackgroundColor="@color/colorCardBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/regular_padding">

        <ImageButton
            android:id="@+id/ib_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_overflow"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tv_front_tag"
            style="@style/CardListItemTextViewStyle"
            android:textStyle="bold"
            android:layout_below="@id/ib_overflow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/x_small_margin"
            android:text="Front: "/>

        <TextView
            android:id="@+id/tv_front"
            style="@style/CardListItemTextViewStyle"
            android:layout_below="@id/ib_overflow"
            android:layout_toRightOf="@id/tv_front_tag"
            android:layout_toEndOf="@id/tv_front_tag"
            android:layout_margin="@dimen/x_small_margin"
            tools:text="La pantalla"/>

        <TextView
            android:id="@+id/tv_rear_tag"
            style="@style/CardListItemTextViewStyle"
            android:layout_below="@id/tv_front"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/x_small_margin"
            android:textStyle="bold"
            android:text="Back: "/>

        <TextView
            android:id="@+id/tv_rear"
            style="@style/CardListItemTextViewStyle"
            android:layout_below="@id/tv_front"
            android:layout_toRightOf="@id/tv_rear_tag"
            android:layout_toEndOf="@id/tv_rear_tag"
            android:layout_margin="@dimen/x_small_margin"
            tools:text="Screen"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>